<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/contact.js"></script>
<p class="container">
    <h2>Contact Management</h2>
    <button type="button" class="btn btn-primary float-end" data-toggle="modal" data-target="#myModal" onclick="location.href='@Url.Action("Create", "Contacts")';return false;">
        Add New Contact
    </button><br /><br />
    <p>
    <input type="text" placeholder="Search Contact" onblur="search();" onchange="search();" class="form-control" id="Search" />
    </p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>EmailId</th>
                <th>SSN</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody class="tbody">
            <!-- Contact records will be populated here -->
        </tbody>
    </table>
</p>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="Close();">×</button>
                <h4 class="modal-title" id="myModalLabel">Edit Contact</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">ID</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">FirstName</label>&nbsp;<span style="color:red">*</span>
                        <input type="text" maxlength="100" class="form-control" id="FirstName" placeholder="FirstName" />
                    </div>
                    <div class="form-group">
                        <label for="Name">LastName</label>&nbsp;<span style="color:red">*</span>
                        <input type="text" maxlength="100" class="form-control" id="LastName" placeholder="LastName" />
                    </div>
                    <div class="form-group">
                        <label for="Gender">Gender</label>&nbsp;<span style="color:red">*</span>
                   @*      <input type="text" maxlength="10" class="form-control" id="Gender" placeholder="Gender" /> *@
                        <select name="Gender" id="Gender" placeholder="Select Gender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>           
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="EmailId">Email Id</label>&nbsp;<span style="color:red">*</span>
                        <input type="email" maxlength="100" class="form-control" id="EmailId" placeholder="EmailId" />
                    </div>
                    <div class="form-group">
                        <label for="SocialSecurityNumber">Social Security Number</label>&nbsp;<span style="color:red">*</span>
                        <input type="text" maxlength="50" class="form-control" id="SocialSecurityNumber" placeholder="SocialSecurityNumber" />
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">Phone Number</label>&nbsp;<span style="color:red">*</span>
                        <input type="text" maxlength="50" class="form-control" id="PhoneNumber" placeholder="PhoneNumber" />
                    </div>
                    <div class="form-group">
                        <label for="FaxNumber">Fax Number</label>
                        <input type="text" maxlength="50" class="form-control" id="FaxNumber" placeholder="FaxNumber" />
                    </div>
                    <div class="form-group">
                        <label for="DateOfBirth">Date Of Birth</label>&nbsp;<span style="color:red">*</span>
                        <input type="date" maxlength="20" class="form-control" id="DateOfBirth" placeholder="DateOfBirth" />
                    </div>
                    <div class="form-group">
                        <label for="UserName">User Name</label>&nbsp;<span style="color:red">*</span>
                        <input type="text" maxlength="50" class="form-control" id="UserName" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <label for="UserPassword">User Password</label>&nbsp;<span style="color:red">*</span>
                        <input type="password" maxlength="50" class="form-control" id="UserPassword" placeholder="UserPassword" />
                    </div>

                    <div class="form-group">
                        <label for="Address1">Address1</label>
                        <input type="text" maxlength="100"  class="form-control" id="Address1" placeholder="Address1" />
                    </div>
                    <div class="form-group">
                        <label for="Address2">Address2</label>
                        <input type="text" maxlength="100" class="form-control" id="Address2" placeholder="Address2" />
                    </div>
                    <div class="form-group">
                        <label for="City">City</label>
                        <input type="text" maxlength="100" class="form-control" id="City" placeholder="City" />
                    </div>
                    <div class="form-group">
                        <label for="State">State</label>
                        <input type="text" maxlength="100"  class="form-control" id="State" placeholder="State" />
                    </div>
                    <div class="form-group">
                        <label for="PinCode">Pin Code</label>
                        <input type="text" maxlength="30" class="form-control" id="PinCode" placeholder="PinCode" />
                    </div>
                
                    <input type="hidden" class="form-control" id="CreatedDate" />

                </form>
            </div>
            <div class="modal-footer">
               @*  <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button> *@
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="Close();">Close</button>
            </div>
        </div>
    </div>
</div>


